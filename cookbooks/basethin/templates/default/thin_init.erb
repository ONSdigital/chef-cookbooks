DAEMON=<%= @ruby_install_dir %>/bin/thin
SCRIPT_NAME=/etc/init.d/thin
CONFIG_PATH=/etc/thin

# Exit if the package is not installed
[ -x "$DAEMON" ] || exit 0

case "$1" in
        start)
                su - <%= @thin_user %> -c "$DAEMON --user=<%= @thin_user %> --group=<%= @thin_user %> --all $CONFIG_PATH start"
        ;;
        stop)
                su - <%= @thin_user %> -c "$DAEMON --user=<%= @thin_user %> --group=<%= @thin_user %> --all $CONFIG_PATH stop"
        ;;
        restart)
                su - <%= @thin_user %> -c "$DAEMON --user=<%= @thin_user %> --group=<%= @thin_user %> --all $CONFIG_PATH restart"
        ;;
        *)
                echo "Usage: $SCRIPT_NAME {start|stop|restart}" >&2
                exit 3 # Program is not running
        ;;
esac
